<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sanjay.foodrunner">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/food_runner_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/food_runner_icon_round"
        android:supportsRtl="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:theme="@style/AppTheme">
        <activity android:name=".files.activity.ResetPasswordActivity"></activity>
        <activity android:name=".files.activity.MainActivity" android:theme="@style/MainTheme"/>
        <activity android:name=".files.activity.ForgotPasswordActivity" />
        <activity android:name=".files.activity.RegisterActivity" />
        <activity
            android:name=".files.activity.SplashScreen"
            android:noHistory="true"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".files.activity.LoginActivity" android:theme="@style/LoginTheme"/>
    </application>

</manifest>